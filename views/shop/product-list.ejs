				  <p class="card-text"><%= fmly.description %></p>
				<h6 class="price">$<%= fmly.price %></h6>
				<% if (fmly.vegetarian === true) { %><div class="veg"><i class="fa fa-leaf"></i>Veg</div><%  } else { %><div class="non-veg"><i class="fa fa-leaf"></i>Non-Veg</div><% } %>
				<div class="action_btn"><a href = "javascript:void(0);" data-pizza="<%= JSON.stringify(fmly) %>" class="add-to-card btn btn-white btn-default">Add An Item</a></div>
				</div>
			  </div>
			</div>
			<% } %>
			<% } %>
		  </div>		  
		</div>		
		<% } %>
