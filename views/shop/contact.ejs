<%- include('../includes/header.ejs') %>
<div class="breadcrumb_section overlay_bg_50 page_title_light">
  <div class="container"><!-- STRART CONTAINER -->
      <div class="row">
          <div class="col-sm-12">
              <div class="page-title">
              <h1>Contact Us</h1>
              </div>
              <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a href="#">Home</a></li>
                  <li class="breadcrumb-item active">Contact Us</li>
              </ol>
          </div>
      </div>
  </div><!-- END CONTAINER-->
</div>
    
    <div class="page-section">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-lg-6 py-3 wow fadeInUp" style="visibility: visible; animation-name: fadeInUp;">
            <h2 class="title-section">Get in Touch</h2>
            <div class="divider"></div>
            <p>Lorem ipsum dolor sit amet consectetur adipisicing elit.<br>
              Laborum ratione autem quidem veritatis!</p>
            <ul class="contact-list">
              <li>
                <div class="icon"><i class="las la-map-marker"></i></div>
                <div class="content">123 Fake Street, New York, USA</div>
              </li>
              <li>
                <div class="icon"><i class="las la-envelope"></i></div>
                <div class="content"><a href="#">email@domain.com</a></div>
              </li>
              <li>
                <div class="icon"><i class="las la-phone-volume"></i></div>
                <div class="content"><a href="#">+00 1122 3344 55</a></div>
              </li>
            </ul>
          </div>
          <div class="col-lg-6 py-3 wow fadeInUp" style="visibility: visible; animation-name: fadeInUp;">
            <div class="subhead">Contact Us</div>
            <h2 class="title-section">Drop Us a Line</h2>
            <div class="divider"></div>
            <% if(messages.success) { %>
              <span class="text-success-500 text-sm"><%= messages.success %></span>
          <% } %>
          <% if(messages.error) { %>
              <span class="text-red-500 text-sm"><%= messages.error %></span>
          <% } %>
            <form class="contact-form" id="contact-form">
        <div class="row">
          <div class="form-group col-md-12">
          <div class="input_group">
            <input
            required="required"
            placeholder="Name*"
            class="form-control"
            name="name"
            type="text"
            id="contact_name"
            />           
          </div>
          </div>
          <div class="form-group col-md-6">
          <div class="input_group">
            <input
              required="required"
            placeholder="Email Address*"
            class="form-control"
            name="email"
            type="text"
            id="contact_email"
            />           
          </div>
          </div>
          <div class="form-group col-md-6">
          <div class="input_group">
            <input
            required="required"
            placeholder="Mobile No."
            class="form-control"
            name="phone"
            type="tel"
            id="contact_phone"
            />           
          </div>
          </div>
          <div class="form-group mb-10 mt-2 col-md-12">
            <textarea rows="5" class="form-control" name="message" id="contact_message" placeholder="Message"></textarea>
          </div>
          <div class="col-md-12">
          <button
            type="submit"
            title="Submit Your Message!"
            class="btn btn-default btn-danger"
            name="submit"
            value="Submit"
          >
            book now
          </button>
          </div>
        </div>
        </form>
          </div>
        </div>
      </div>
    </div>
  

<%- include('../includes/footer.ejs') %>
